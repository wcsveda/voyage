html {
    box-sizing: border-box;
  }
  *, *:before, *:after {
    box-sizing: inherit;
  }

  $highlight_color: #1DD2AF;
  $primary-bgc: #2D3E50; 
  $default_width: 80%;

  #container {
      height: 100vh;
  }

  
@each $icon in user, file-o, facebook, twitter, tumblr, pinterest, chevron-right, chevron-left, calendar, globe, chevron-down {
    .fa-$(icon):after {
        @icon: fa-$(icon); 
    }    
}

#top-nav {
    background-color: $primary-bgc;
    overflow: hidden;
    font-family: monospace;
    font-size: 0.8rem;

    .fa:after {
        color:white;
        padding-right: 0.4em;
    }

    ul {
        width: $default_width;
        margin: auto;
        @util reset-list;

        li {
            display: inline-block;
            color:white;
            padding: 0.5%;
            border: 1px outset color($primary-bgc shade(5%));
            border-width: 0 1px 0 0;

            a {
                color: inherit;
                text-decoration: none;
                text-align: center;
                display: inline-block;
            }

            &.gap {
                padding-right: 30%;
            }
        }
    }
    
.register_link {
    color: $highlight_color;
}
}


#brand-nav {
    background-color: #fff;
    outline: 1px solid green;
    padding-top: 1.5%;
    padding-bottom: 1.5%;

    nav {
        margin: auto;
        width: $default_width;
        display: flex;
        justify-content: space-between;
        align-items: center;
    

        h1 {
            display: inline;
            padding: 0;
            margin: 0;
            font-size: 2em;

            span {
                color: $highlight_color;
            }
        }

        ul {
            display: flex;
            @util reset-list;
            width:60%;
            justify-content: space-around;
            align-items: center;
    
            li {
                display: inline-block;

                a {
                    @util reset-text;
                    color:$primary-bgc;
                    text-transform: uppercase;

                    &.clicked {
                        color: $highlight_color;
                    }
                }

                #search_button {
                    background-image: url(imgs/magnifying-glass.svg);
                    height: 3em;
                    width: 3em;
                    background-color: unset;
                    display: inline-block;
                    border: 0;

                    &:focus, &:active {
                        border:0;
                    }
                    &:active {
                        border-style: outset;
                      }
                }
            }
        }
    }
}

@define-mixin bgimage $img {
    background: 
    linear-gradient(
        color($primary-bgc a(0.8)), 
        color($primary-bgc a(0.8))
      ),
    url($img);
    background-size: fill;
    background-position: center;
    background-repeat: no-repeat;
}

#jumbo_carousal {
    height: 80%;

    .background {
        height: 100%;
        width: 100%;
    }

    .background {
        @mixin bgimage https://source.unsplash.com/collection/2729367/1366x768;
        .navbtn {
            color:color(white a(0.5) );
            background: transparent;
            border: 0;
            font-size: 1.5em;
            padding: 1% 2% ;
            text-align: center;
            top:50%;
            position: absolute;
            background-color: color($primary-bgc a(0.6) tint(30%));
        }
        .navbtn.next {
            right: 0;
        }
        .navbtn.hasMoreValue {
            background-color: $highlight_color;
            color:white;
        }

        .content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: monospace;
              

            p {
                color:white;
                text-align: center;
                font-size: 2em;

                span {
                    font-size: .5em;
                    display: block;
                }
            }

            .buttons {
                width: 100%;
                outline: 1px solid red;
                
                button {
                color: white;
                background: transparent;
                border:1px solid white;
                padding: 2% 5%;
                border-radius: 10%;

                &.clicked {
                    background-color: $highlight_color;
                }
                }
            }
        }
    }
}

#holiday_finder {
    background-color: $primary-bgc;

   & > div {
        width: $default_width;
        margin: auto;
        display: flex;
        align-items: center;

        & > * {
            margin-right: 2%;
        }

        h2 {
            font-family: monospace;
            color:color(white a(0.7));
            font-weight:300;
            font-size: 1.2em;

            span {
                display: block;
                font-size: 1.5em;
                color:white;
            }
        }

        .separator {
            display: block;
            height: 100%;
            outline: 1px solid red;
        }

        form {
            display: flex;
            width: 80%;
            align-items: center;

            label {
                margin-left: 5%;
                margin-right: 2%;
                color: white;
                opacity: 0.7;
                font-family: monospace;
                font-size: 1.2em;
            }

            .input {
               input {
                   border: 0;
                   width: 90%;
               }
               padding: 1%;
                background-color: white;
            }

            button {
                margin-left: 2%;
                background-color: $highlight_color;
                border: 0;
                color:white;
                padding: 1%;
                width: 10%;
            }
        }
    }
}

.heading {
    font-family: monospace;
    font-weight: normal;
    text-align: center;

    span {
        display: block;
        font-size: 0.6em;
    }
}

#special-offers {
    height: 60%;

    .cards {
        width: 100%;
        height: 90%;
        display: flex;
        align-items: center;
        
        .card {
            margin: 5px;
            background-color: color(white shade(7%));
            padding: 5px;
            border-radius: 2%;
            width: 40%;
            height: 60%;
            display: flex;
            flex-direction: column;

            .img {
                background-size: cover;
                height: 80%;
            }

            &.scale1 {
                width: 30%;
                height: 50%;
            }
            &.scale2 {
                width: 35%;
                height: 55%;
            }

            .content {
                width: 100%;
                height: 20%;
                display: flex;
                align-items: center;
                padding: 3%;

                h3 {
                    font-weight: normal;
                    font-family: monospace;
                    display: inline-block;
                    width: 90%;
                    color: gray;
                    font-size: 1em;
                    span {
                        display: block;
                        font-size: 0.7em;
                        opacity: 0.6;
                    }
                }
                button {
                    width: 20%;
                    background: transparent;
                    border: 0;

                    .fa {
                        color: gray;
                    }
                }
            }

            &.selected {
                padding: 0;
                width: 40%;
                height: 65%;
                border: 5px solid $highlight_color;
                border-radius: 2%;

            .content {
                background-color: $primary-bgc;

                h3 {
                    color: white;
                }

                span {
                    color:white;
                }
            }
            }
        }

    }
}

#holiday-types {
    @mixin bgimage https://source.unsplash.com/vZq9_GBUOVI/1600x900;
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-bottom: 2%;
    

    .heading {
        color:white;
    }
    
    .types {
        display:flex;
        justify-content: center;
        align-content: center;
        font-family: monospace;

        .card {
            display: inline-block;
            color: white;
            flex-basis: 10%;

            span {
                display: block;
                text-align: center;
                outline:1px solid red;
            }
            
            svg {
                width: 50%;
                height: 50%;
                fill:white;
            }

            &.selected {
                color:$highlight_color;

                svg {
                    fill: $highlight_color;
                }
            }
        }
    }
    
}
